@model IEnumerable<Sistema.Models.Estados>
@{
    ViewBag.Title = "Estados";
    ViewBag.Layout = "~/_Styles/Style.css";
}
<div class="container-fluid">
    <div class="form-control-static" style="margin-top:15px; margin-block: 15px; text-align:center">
        <h4 style="color: black; text-align:center"> @ViewBag.Title</h4>
        @Html.ActionLink("Adicionar", "Create", new { }, new { @class = "btn btn-success" })
        @Html.ActionLink("Limpar", "Index", new { }, new { @class = "btn btn-primary" })
    </div>

    <table id="Estados" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th width="5%">Código</th>
                <th width="54%">Estado</th>
                <th width="10%">UF</th>
                <th width="10%">País</th>
                <th width="13%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.codEstado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nomeEstado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.uf)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pais.text)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Details", new { id = item.codEstado }, new { @class = "btn btn-success btn-sm fa fa-eye", @title = "Visualizar registro" })
                        @Html.ActionLink(" ", "Edit", new { id = item.codEstado }, new { @class = "btn btn-warning btn-sm fa fa-edit", @title = "Editar registro" })
                        @Html.ActionLink(" ", "Delete", new { id = item.codEstado }, new { @class = "btn btn-danger btn-sm fa fa-trash-o", @title = "Excluir registro" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/Estados/Index.js")
}
