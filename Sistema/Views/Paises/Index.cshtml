    <h4 class="header-index"> @ViewBag.Title</h4>
    <div style="margin-block: 15px; text-align:center">
        @Html.ActionLink("Adicionar", "Create", new { }, new { @class = "btn btn-success" })
        @Html.ActionLink("Limpar", "Index", new { }, new { @class = "btn btn-primary" })
    </div>

    <table id="Paises" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th width="5%">Código</th>
                <th width="55%">Pais</th>
                <th width="10%">DDI</th>
                <th width="10%">Sigla</th>
                <th width="12%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.codPais)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nomePais)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DDI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sigla)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Details", new { id = item.codPais }, new { @class = "btn btn-success btn-sm fa fa-eye", @title = "Visualizar registro" })
                        @Html.ActionLink(" ", "Edit", new { id = item.codPais }, new { @class = "btn btn-warning btn-sm fa fa-edit", @title = "Editar registro" })
                        @Html.ActionLink(" ", "Delete", new { id = item.codPais }, new { @class = "btn btn-danger btn-sm fa fa-trash-o", @title = "Excluir registro" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/Paises/Index.js")
}
