@model Sistema.Models.PaisesVM
@{
    ViewBag.Title = "Adicionar registro";
    ViewBag.Layout = "~/_Styles/Style.css";
    ViewBag.readOnly = false;
}

<div class="form-control-static" style="margin-top:15px; margin-block: 15px">
    <h4 style="color: black"> @ViewBag.Title </h4>
</div>

<div class="container-fluid">
    <div class="pull-left collg-12 col-md-12 col-sm-10 col-xs-10">
        <p style="text-align: right; color: red; font-size:16px; font-weight: bold;">* Campos obrigatórios</p>
        @Html.Partial("Form", Model)
    </div>
    <div style="margin-left: 17px">
        <button type="submit" class="btn btn-success"> <i class="glyphicon glyphicon-ok"></i> Salvar</button>
        <a href="@Url.Action(@Html.ViewBag.Action)" class="btn btn-primary" role="button" aria-pressed="true"> <i class="eye"></i> Limpar</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary" role="button" aria-pressed="true"> <i class="glyphicon glyphicon-arrow-left"></i> Voltar</a>
    </div>
</div>