@model Sistema.Models.Grupos
@using Sistema.Util
@{
    bool readOnly = Convert.ToBoolean(ViewBag.ReadOnly);
    string action = Convert.ToString(ViewBag.Action);
}

@Html.HiddenFor(model => model.codGrupo)
<div class="form-row">
    <div class="@Util.Input2">
        @Html.LabelFor(model => model.codGrupo)
        @Html.TextBoxFor(model => model.codGrupo, new { @class = "form-control", disabled = false })
    </div>
</div>

<div class="form-row">
    <div class="@Util.Input3">
        @Html.LabelFor(model => model.situacao)
        @Html.DropDownListFor(model => model.situacao, Sistema.Models.Grupos.Situacao, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.situacao, null, new { @class = "text-danger" })
    </div>
</div>

<div class="form-row">
    <div class="@Util.Input12">
        @Html.LabelFor(model => model.nomeGrupo, new { @class = "required" })
        @Html.TextBoxFor(model => model.nomeGrupo, new { @class = "form-control", maxlength = "100", style = "text-transform:uppercase", minlength = "3" })
        @Html.ValidationMessageFor(model => model.nomeGrupo, null, new { @class = "text-danger" })
    </div>
</div>

<div class="form-row">
    <div class="@Util.Input12">
        @Html.LabelFor(model => model.descricao, new { @class = "required" })
        @Html.TextAreaFor(model => model.descricao, new { @class = "form-control", maxlength = "500", style = "text-transform:uppercase" })
        @Html.ValidationMessageFor(model => model.descricao, null, new { @class = "text-danger" })
    </div>
</div>
 