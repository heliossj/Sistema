    </div>

    <div class="@Util.Input3">
        @Html.LabelFor(model => model.dtNascimento)
        <div class="input-group-append">
            @Html.TextBoxFor(model => model.dtNascimento, new { @class = "form-control datepicker" })
            <span class="fa fa-calendar input-group-text" style="font-size:23px"></span>
        </div>
    </div>
</div>

<div class="form-row">
    <div class="@Util.Input3">
        @Html.LabelFor(model => model.dtAdmissao)
        <div class="input-group-append">
            @Html.TextBoxFor(model => model.dtAdmissao, new { @class = "form-control datepicker date" })
            @Html.ValidationMessageFor(model => model.dtAdmissao, null, new { @class = "text-danger" })
